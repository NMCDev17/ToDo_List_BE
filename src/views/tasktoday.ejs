<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="/static/js/main.js"></script>
<script>
    const startDate = flatpickr('#date-start', {
        enableTime: true,
        dateFormat: 'j-n-Y H:i',
        minDate: 'today',
        maxDate: 'today',
        time_24hr: true,
        defaultDate: 'today',
        locale: {
            firstDayOfWeek: 1, // start week on Monday
        },
    });
    const endDate = flatpickr('#date-end', {
        enableTime: true,
        dateFormat: 'j-n-Y H:i',
        minDate: 'today',
        maxDate: 'today',
        time_24hr: true,
        defaultDate: 'today',
        locale: {
            firstDayOfWeek: 1, // start week on Monday
        },
    });
</script>